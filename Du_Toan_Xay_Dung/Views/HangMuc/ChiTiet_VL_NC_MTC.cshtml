@using Du_Toan_Xay_Dung.Models
@{
    ViewBag.Title = "ChiTiet_VL_NC_MTC";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var id = ViewData["ID_MaHieuCV"];
    var list_vl = (dynamic)null;
    var list_nc = (dynamic)null;
    var list_mtc = (dynamic)null;
    if(id.ToString().Substring(0,3)!="CV_")
    {
        list_vl = ViewData["List_VL"] as List<HaoPhi_DM_ViewModel>;
        list_nc = ViewData["List_NC"] as List<HaoPhi_DM_ViewModel>;
        list_mtc = ViewData["List_MTC"] as List<HaoPhi_DM_ViewModel>;
    }
    else
    {
        list_vl = ViewData["List_VL"] as List<HaoPhi_User_ViewModel>;
        list_nc = ViewData["List_NC"] as List<HaoPhi_User_ViewModel>;
        list_mtc = ViewData["List_MTC"] as List<HaoPhi_User_ViewModel>;
    }
    
}
<h2>Thành Phần Hao Phí</h2>
<section class="content">
    @{ Html.RenderPartial("_Menu_HangMuc"); }
    <div class="container" style="margin-top:100px">
        <div class="row">
            <div class="col-xs-8">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Vật Liệu</h3>
                        <div class="box-tools">
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <th>Loại Vật Liệu</th>
                                    <th>Đơn Vị</th>
                                    <th>Giá Theo Đơn Giá</th>
                                    <th></th>
                                </tr>
                                @if (list_vl != null)
                                {
                                    decimal? tong = 0;
                                    foreach (var item in list_vl)
                                    {

                                        <tr>
                                            <td>@item.Ten</td>
                                            <td>@item.DonVi</td>
                                            <td><input style="width:150px" type="text" value="@item.Gia" name="txt_giavl" id="txtgiavl" /></td>
                                            <td></td>
                                        </tr>
                                        tong = tong + @item.Gia;
                                    }

                                    <tr>
                                        <td></td>
                                        <td><span style="font-weight:bold">TỔNG: </span></td>
                                        <td><input style="width:150px" type="text" value="@tong" name="txt_tongvl" id="txt_tongvl" /></td>
                                        <td></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
        <div class="row">
            <div class="col-xs-8">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Nhân Công</h3>
                        <div class="box-tools">
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <th>Loại Vật Liệu</th>
                                    <th>Đơn Vị</th>
                                    <th>Giá Theo Đơn Giá</th>
                                    <th></th>
                                </tr>

                                @if (list_nc != null)
                                {
                                    decimal? tong = 0;
                                    foreach (var item in list_nc)
                                    {

                                        <tr>
                                            <td>@item.Ten</td>
                                            <td>@item.DonVi</td>
                                            <td><input style="width:150px" type="text" value="@item.Gia" name="txt_giavl" id="txtgiavl" /></td>
                                            <td></td>
                                        </tr>
                                        tong = tong + @item.Gia;
                                    }

                                    <tr>
                                        <td></td>
                                        <td><span style="font-weight:bold">TỔNG: </span></td>
                                        <td><input style="width:150px" type="text" value="@tong" name="txt_tongnc" id="txt_tongnc" /></td>
                                        <td></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>

        <div class="row">
            <div class="col-xs-8">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Máy Thi Công</h3>
                        <div class="box-tools">
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <th>Loại Vật Liệu</th>
                                    <th>Đơn Vị</th>
                                    <th>Giá Theo Đơn Giá</th>
                                    <th></th>
                                </tr>
                                @if (list_mtc != null)
                                {
                                    decimal? tong = 0;
                                    foreach (var item in list_mtc)
                                    {

                                        <tr>
                                            <td>@item.Ten</td>
                                            <td>@item.DonVi</td>
                                            <td><input style="width:150px" type="text" value="@item.Gia" name="txt_giavl" id="txtgiavl" /></td>
                                            <td></td>
                                        </tr>
                                        tong = tong + @item.Gia;
                                    }

                                    <tr>
                                        <td></td>
                                        <td><span style="font-weight:bold">TỔNG: </span></td>
                                        <td><input style="width:150px" type="text" value="@tong" name="txt_tongmtc" id="txt_tongmtc" /></td>
                                        <td></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2" style="float:right">
                <button type="submit" class="btn btn-block btn-primary btn-flat">Save</button>
            </div>
        </div>
    </div>

</section>
